def abc(num):
    sum = 0
    for i in range(num):
        price = int(input("รับค่าสินค้า %d " % (i+1)))
        sum += price
    return sum

def disc(sum):
    d = sum*5/100
    return d

def Tax(sum):
    vat = sum*7/100
    return vat

def total(a,b,c):
    t = a+b-c
    return t

num = int(input("จำนวนสินค้า "))
sum = abc(num)
print("ราคารวม %.2f" % sum)
print("ภาษี %.2f" % Tax(sum))
print("ลดราคา %.2f" % disc(sum))
print("รวมเป็นเงินทั้งสิ้น %.2f" % total(sum, Tax(sum),disc(sum)))
